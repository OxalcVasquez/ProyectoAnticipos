<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.AppNavigationDrawerActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    <item name="colorAccent">@color/primaryColor</item>
    <item name="colorPrimaryVariant">@color/primaryLightColor</item>
    <item name="colorOnPrimary">@color/primaryLightColor</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondaryColor</item>
    <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    <item name="colorOnSecondary">@color/secondaryLightColor</item>

    <!-- Customize your theme here. -->
    <item name="android:windowTranslucentStatus">true</item>
    <!--<item name="android:windowActionBarOverlay">true</item>-->

    <!-- Status bar color. -->
    <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
</style>

<style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="Theme.AppNavigationDrawerActivity.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>



</resources>